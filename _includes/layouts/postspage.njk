---
layout: layouts/base.njk
templateClass: tmpl-home
---

<div class="window">
  <div class="title-bar">
    <button aria-label="Close" class="close"></button>
    <h1 class="title"> {{ title }} - posts </h1>
    <button aria-label="Resize" class="resize"></button>
  </div>
  <div class="separator"></div>

  <div class="window-pane">
  
  {% for post in collections.all %}
    {% if post.data.eleventyNavigation.parent  == title %}
      <div class="alert-box outer-border scale-down"  style="width:30rem;">
      <div class="inner-border">
        <div class="alert-contents">
          <section class="field-row" style="justify-content: flex-start">
            <b style="padding-left:10px;"> {{ post.data.title }} </b>
          </section>
          <section>
            <p class="alert-text"> little context in here </p>
          </section>
          <section class="field-row" style="justify-content: flex-end">
            <a class="btn" href="{{ post.url }}" style="width:95px;">read</a>
          </section>

        </div>

      </div>
    </div>
        {# <a href="{{ post.url }}" class="btn">{{ post.data.title }}</a> #}
      {% endif %}
  {% endfor %}
  </div>
</div>